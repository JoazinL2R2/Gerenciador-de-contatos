@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
    <form asp-controller="Contato" asp-action="Alterar" method = "post">
       <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="nome">
            @Html.ValidationMessageFor(x => x.nome)
        </div>
        <div class="mb-3">
            <label class="form-label">E-Mail</label>
            <input type="email" class="form-control" asp-for="email">
            @Html.ValidationMessageFor(x => x.email)
        </div>
        <div class="mb-3">
            <label class="form-label">Celular</label>
            <input type="text" class="form-control" asp-for="celular">
            @Html.ValidationMessageFor(x => x.celular)
        </div>
        <button type="submit" class="btn btn-primary">ATUALIZAR</button>
    </form>
</div>
